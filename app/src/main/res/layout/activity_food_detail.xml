<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodDetailActivity">

    <ImageView
        android:id="@+id/detailImage"
        android:layout_width="245dp"
        android:layout_height="248dp"
        android:layout_alignParentLeft="true"

        android:layout_alignParentTop="true"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/detailFood"
        android:layout_width="162dp"
        android:layout_height="250dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="1dp"
        android:layout_toRightOf="@id/detailImage"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/detailPrice"
        android:layout_width="194dp"
        android:layout_height="78dp"
        android:layout_below="@+id/detailImage"

        android:layout_marginTop="126dp" />

    <TextView
        android:id="@+id/detailDescription"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_below="@id/detailPrice"
        android:layout_marginTop="47dp" />

    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
        android:id="@+id/btnNumber"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:textSize="12sp"
        app:backGroundColor="#333639"
        android:layout_toEndOf="@id/detailPrice"/>


</RelativeLayout>


